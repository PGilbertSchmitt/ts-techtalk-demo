{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@root/*": [
        "./*.json",
      ],
      "@src/*": [
        "./src/*",
      ],
      "@comp/*": [
        "./src/components/*",
      ],
      "@styles/*": [
        "./src/styles/*",
      ],
      "@api/*": [
        "./src/api/*",
      ],
      "@res/*": [
        "./src/resources/*",
      ],
      "@util/*": [
        "./src/util/*",
      ],
      "@assets/*": [
        "./src/components/assets/*",
      ],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ],
}